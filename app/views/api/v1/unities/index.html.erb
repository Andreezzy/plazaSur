<p id="notice"><%= notice %></p>

<h1>Unities</h1>

<table>
  <thead>
    <tr>
      <th>Unity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @unities.each do |unity| %>
      <tr>
        <td><%= unity.unity %></td>
        <td><%= link_to 'Show', api_v1_unity_path(unity) %></td>
        <td><%= link_to 'Edit', edit_api_v1_unity_path(unity) %></td>
        <td><%= link_to 'Destroy', api_v1_unity_path(unity), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Unity', new_api_v1_unity_path %>
