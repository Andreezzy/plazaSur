<p id="notice"><%= notice %></p>

<h1>Chances</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Products</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chances.each do |chance| %>
      <tr>
        <td><%= chance.name %></td>
        <td><%= chance.products %></td>
        <td><%= link_to 'Show', chance %></td>
        <td><%= link_to 'Edit', edit_chance_path(chance) %></td>
        <td><%= link_to 'Destroy', chance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chance', new_chance_path %>
