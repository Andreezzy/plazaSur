<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Url image</th>
      <th>Bar code</th>
      <th>Flag</th>
      <th>Suggested price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.url_image %></td>
        <td><%= product.bar_code %></td>
        <td><%= product.flag %></td>
        <td><%= product.suggested_price %></td>
        <td><%= link_to 'Show', api_v1_product_path(product) %></td>
        <td><%= link_to 'Edit', edit_api_v1_product_path(product) %></td>
        <td><%= link_to 'Destroy', api_v1_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_api_v1_product_path %>
